{
  "name": "trb-deephealth-llm-testing",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --config config/vite.config.ts",
    "dev:https": "vite --https --config config/vite.config.ts",
    "dev:host": "vite --host --config config/vite.config.ts",
    "build": "vite build --config config/vite.config.ts",
    "format": "prettier --write .",
    "lint": "eslint . --config config/eslint.config.js --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview --config config/vite.config.ts",
    "test": "vitest --config config/vite.config.ts",
    "test:ui": "vitest --ui --config config/vite.config.ts",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "typecheck": "npx tsc --noEmit --project config/tsconfig.json",
    "analyze": "npm run build && node scripts/bundle-analysis-react19-migration.js",
    "analyze:bundle": "npm run build && npx webpack-bundle-analyzer dist/",
    "analyze:deps": "npx depcheck",
    "lighthouse": "npm run build && npm run preview & sleep 3 && npx lighthouse http://localhost:4173 --output-path=./reports/lighthouse.html && pkill -f 'vite preview'",
    "security:audit": "npm audit && npx better-npm-audit audit",
    "deps:update": "npx npm-check-updates",
    "deps:outdated": "npm outdated",
    "deps:update-interactive": "npx npm-check-updates -i",
    "optimize:images": "npx imagemin-cli public/**/*.{jpg,png,webp} --out-dir=public/optimized",
    "validate": "npm run format && npm run lint && npm run typecheck && npm run build && npm run dev",
    "validate_quick": "npm run lint && npm run typecheck",
    "validate_full": "npm run format && npm run lint && npm run typecheck && npm run build && npm run test:coverage && npm run security:audit && npm run analyze:deps && npm run analyze && npm run dev",
    "validate_ci": "npm run lint && npm run typecheck && npm run build && npm run test:coverage"
  },
  "dependencies": {
    "clsx": "^2.0.0",
    "lucide-react": "^0.544.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^1.14.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@testing-library/jest-dom": "^6.1.2",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.3.1",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "better-npm-audit": "^3.11.0",
    "depcheck": "^1.4.7",
    "eslint": "^9.35.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "globals": "^16.4.0",
    "jsdom": "^22.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.42.0",
    "vite": "^7.0.5",
    "vitest": "^3.2.4"
  }
}
